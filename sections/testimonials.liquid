<div class="flex flex-col items-center my-8">
    {% if section.settings.title != blank %}
    <h1 class="text-3xl font-medium my-8 md:my-16">{{section.settings.title}}</h1>
    {% endif %}
    <div class="w-full h-60 flex items-center justify-center gap-5 px-4">
        <div class="h-full bg-gray-200 flex-1 flex shadow-lg">
            <div class="w-1/2">
                {% if section.settings.image1 %}
                <img class="w-full h-full object-cover" src=" {{ section.settings.image1 | img_url: 'large'}} " alt="">
                {% else %}
                {{'product-1' | placeholder_svg_tag: "w-full h-full object-cover bg-gray-200"}}
                {% endif %}
            </div>
            <div class="w-1/2 relative">
                <p class="text-gray-700 p-3 text-center">{{ section.settings.testimonial-1 }}</p>
                <p class="absolute bottom-4 left-3">- Name</p>
            </div>
        </div>
        <div class="h-full bg-gray-200 flex-1 flex shadow-lg">
            <div class="w-1/2">
                {% if section.settings.image2 %}
                <img class="w-full h-full object-cover" src=" {{ section.settings.image2 | img_url: 'large'}} " alt="">
                {% else %}
                {{'product-1' | placeholder_svg_tag: "w-full h-full object-cover bg-gray-200"}}
                {% endif %}
            </div>
            <div class="w-1/2">
                <p class="text-gray-700 p-3 text-center">{{ section.settings.testimonial-2 }}</p>
            </div>
        </div>
        <div class="h-full bg-gray-200 flex-1 flex shadow-lg">
            <div class="w-1/2">
                {% if section.settings.image3 %}
                <img class="w-full h-full object-cover" src=" {{ section.settings.image3 | img_url: 'large'}} " alt="">
                {% else %}
                {{'product-1' | placeholder_svg_tag: "w-full h-full object-cover bg-gray-200"}}
                {% endif %}
            </div>
            <div class="w-1/2">
                <p class="text-gray-700 p-3 text-center">{{ section.settings.testimonial-3 }}</p>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
"name": "Testimonials",
"settings": [
{
"type": "text",
"id": "title",
"label": "Title"
},
{
"type": "textarea",
"id": "testimonial-1",
"label": "Testimonial 1"
},
{
"type": "image_picker",
"id": "image1",
"label": "First testimonial image"
},
{
"type": "textarea",
"id": "testimonial-2",
"label": "Testimonial 2"
},
{
"type": "image_picker",
"id": "image2",
"label": "Second testimonial image"
},
{
"type": "textarea",
"id": "testimonial-3",
"label": "Testimonial 3"
},
{
"type": "image_picker",
"id": "image3",
"label": "Third testimonial image"
}
],
"presets": [
{
"name":"Testimonials"
}
]
}
{% endschema %}