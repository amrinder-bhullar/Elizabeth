<footer class="section-p1">
  <div class="col">
    <img
      class="logo"
      src="https://cdn.shopify.com/s/files/1/0659/5077/7568/files/logo.png?v=1682450179"
      alt="">
    <h4>Contact</h4>
    <p>
      <strong>Address:</strong>
      {{ shop.address.address1 }}, {{ shop.address.address2 }}, {{ shop.address.city }}, {{ shop.address.country }}
    </p>
    <p>
      <strong>Phone:</strong>
      +1 2222 365/ +1 8954 456</p>
    <p>
      <strong>Hours:</strong>
      10:00 - 18:00. Mon - Sat</p>
    <div class="follow">
      <h4>Follow Us</h4>
      <div class="icons">
        <i class="fab fa-facebook-f"></i>
        <i class="fab fa-twitter"></i>
        <i class="fab fa-instagram"></i>
        <i class="fab fa-pinterest-p"></i>
        <i class="fab fa-youtube"></i>
      </div>
    </div>
  </div>
  <div class="col">
    <h4>About</h4>
    {% for link in section.settings.about-menu.links %}
        <a href="{{link.url}}">{{ link.title }}</a>
    {% endfor %}
  </div>
  <div class="col">
    <h4>My account</h4>
    {% for link in section.settings.account-menu.links %}
        <a href="{{link.url}}">{{ link.title }}</a>
    {% endfor %}
  </div>
  <div class="col app">
    <h4>Install App</h4>
    <p>From App Store or Google Play</p>
    <div class="row">
      <img src="https://cdn.shopify.com/s/files/1/0659/5077/7568/files/app.jpg?v=1682450230" alt="">
      <img src="https://cdn.shopify.com/s/files/1/0659/5077/7568/files/play.jpg?v=1682450229" alt="">
    </div>
    <p>Secured Payment</p>
    <img src="https://cdn.shopify.com/s/files/1/0659/5077/7568/files/pay.png?v=1682450229" alt="">
  </div>
</footer>

{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
        "type": "text",
        "id": "menu_about_title",
        "default": "About",
        "label": "About Menu title"
      }, {
        "type": "text",
        "id": "menu_account_title",
        "default": "Account",
        "label": "About Menu title"
      }, {
        "type": "link_list",
        "id": "about-menu",
        // "default": "info-menu",
        "label": "About Menu"
      }, {
        "type": "link_list",
        "id": "account-menu",
        "default": "main-menu",
        "label": "Account Menu"
      }
    ]
  }
{% endschema %}