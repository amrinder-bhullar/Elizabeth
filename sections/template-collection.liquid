<div class="px-4 py-4">
  <a href="{{ routes.collections_url }}" class="text-base text-gray-500 hover:underline block text-center my-4">Go
    Back to collections</a>
  {% paginate collection.products by section.settings.number_of_product_per_page %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto" id="product1">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 pro-container">
        {% for product in collection.products %}
          {% render 'product-card-v2', product: product %}
        {% else %}
          <p>There are no products in this collection</p>
        {% endfor %}
      </div>
    </div>

    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
</div>

